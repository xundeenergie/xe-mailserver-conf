local_copy_outgoing:
  driver = appendfile
  headers_add = X-Archive-Sent: on $primary_hostname
  delivery_date_add
  envelope_to_add
  return_path_add
  group = Debian-exim
  user = Debian-exim
  mode = 0660
  maildir_format = true
  create_directory = true


local_copy_incoming:
  driver = appendfile
  headers_add = X-Archive-Received: on $primary_hostname
  directory = /var/mail/mailarchive/$local_part@$domain/incoming
  delivery_date_add
  envelope_to_add
  headers_add = X-Income-Archived: true
  return_path_add
  group = Debian-exim
  user = Debian-exim
  mode = 0660
  maildir_format = true
  create_directory = true
